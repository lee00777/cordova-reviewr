<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquin.lee00777.reviewr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>lee00777-Reviewr</name>
    <description>
        A cordova reviewr application for android
    </description>
    <author email="lee00777@algonquinlive.com" href="http://cordova.io">
        Gyuyoung Lee
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/ldpi.png" />
        <icon density="mdpi" src="res/icon/android/mdpi.png" />
        <icon density="hdpi" src="res/icon/android/hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png" />
        <splash density="port-mdpi" src="res/screen/android/mdpi-port.png" />
        <splash density="port-hdpi" src="res/screen/android/hdpi-port.png" />
        <splash density="port-xhdpi" src="res/screen/android/xhdpi-port.png" />
        <splash density="port-xxhdpi" src="res/screen/android/xxhdpi-port.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/xxxhdpi-port.png" />
        <splash density="land-mdpi" src="res/screen/android/mdpi-land.png" />
        <splash density="land-hdpi" src="res/screen/android/hdpi-land.png" />
        <splash density="land-xhdpi" src="res/screen/android/xhdpi-land.png" />
        <splash density="land-xxhdpi" src="res/screen/android/xxhdpi-land.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/xxxhdpi-land.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="2000" />
</widget>
